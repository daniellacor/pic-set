<div class="col-sm-6 col-sm-offset-3" stye="text-align: center">
<h2>Sign Up</h2>

<form {{action "submit" on="submit"}}>

 <label for="name">First Name</label>
 {{input value=user.firstName placeholder="First Name" class="form-control"}}

  <label for="name">Last Name</label>
 {{input value=user.lastName placeholder="Last Name" class="form-control"}}

 <label for="email">Email</label>
 {{input value=user.email placeholder="Email" class="form-control"}}

 <label for="password">Password</label>
 {{input value=user.password type="password" placeholder="Password" class="form-control my-form"}}

 <label for="passwordConfirmation">Password Confirmation</label>
 {{input value=user.passwordConfirmation type="password" placeholder="Password Confirmation" class="form-control my-form"}}
 <br>
 <button type="submit" class="btn btn-default">Login</button>
</form>

{{error-display errorMessage=errorMessage}}

</div>
